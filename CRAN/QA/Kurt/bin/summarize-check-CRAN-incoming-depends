#! /usr/bin/Rscript
### -*- R -*-

all <- FALSE

dir <- normalizePath(file.path("~", "tmp", "CRAN"))

args <- commandArgs(trailingOnly = TRUE)
if(length(args)) {
    dir <- args[1L]
}
if(any(ind <- args %in% c("-a", "--all"))) {
    all <- TRUE
    args <- args[!ind]
}

tools::summarize_check_packages_in_dir_depends(dir, all)
