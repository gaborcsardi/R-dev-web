#! /usr/bin/Rscript
### -*- R -*-

all <- FALSE
more <- FALSE

dir <- normalizePath(file.path("~", "tmp", "CRAN"))

args <- commandArgs(trailingOnly = TRUE)

if(any(ind <- args %in% c("-a", "--all"))) {
    all <- TRUE
    args <- args[!ind]
}
if(any(ind <- args %in% c("-m", "--more"))) {
    more <- TRUE
    args <- args[!ind]
}
if(length(args)) {
    dir <- args[1L]
}

tools::summarize_check_packages_in_dir_timings(dir, all, more)
