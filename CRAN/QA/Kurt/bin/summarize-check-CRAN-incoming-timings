#! /usr/bin/Rscript
### -*- R -*-

R_scripts_dir <- normalizePath(file.path("~", "lib", "R", "Scripts"))

## <FIXME>
## Integrate into check.R eventually ...
source(file.path(R_scripts_dir, "check_extras.R"))
## </FIXME>

dir <- normalizePath(file.path("~", "tmp", "CRAN"))

all <- FALSE
full <- FALSE

args <- commandArgs(trailingOnly = TRUE)
if(any(ind <- args %in% c("-a", "--all"))) {
    all <- TRUE
    args <- args[!ind]
}
if(any(ind <- args %in% c("-f", "--full"))) {
    full <- TRUE
    args <- args[!ind]
}
if(length(args)) {
    dir <- args[1L]
}

summarize_check_packages_in_dir_timings(dir, all, full)



