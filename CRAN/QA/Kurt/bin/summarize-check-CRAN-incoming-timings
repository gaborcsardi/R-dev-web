#! /usr/bin/Rscript
### -*- R -*-

dir <- normalizePath(file.path("~", "tmp", "CRAN"))

all <- FALSE
full <- FALSE

args <- commandArgs(trailingOnly = TRUE)
if(any(ind <- args %in% c("-a", "--all"))) {
    all <- TRUE
    args <- args[!ind]
}
if(any(ind <- args %in% c("-f", "--full"))) {
    full <- TRUE
    args <- args[!ind]
}
if(length(args)) {
    dir <- args[1L]
}

tools::summarize_check_packages_in_dir_timings(dir, all, full)
