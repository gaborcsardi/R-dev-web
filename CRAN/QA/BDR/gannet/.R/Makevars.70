CC = gcc -std=gnu99 -fsanitize=address,undefined -fno-omit-frame-pointer
CXX = g++ -std=gnu++98 -fsanitize=address,undefined,bounds-strict -fno-omit-frame-pointer
CXX11 = g++ -fsanitize=address,undefined,bounds-strict -fno-omit-frame-pointer
CXX14 = g++ -fsanitize=address,undefined,bounds-strict -fno-omit-frame-pointer
CXX17 = g++ -fsanitize=address,undefined,bounds-strict -fno-omit-frame-pointer
F77 = gfortran -fsanitize=address
FC = gfortran -fsanitize=address
FCFLAGS = -g -O2 -mtune=native -fbounds-check
FFLAGS = -g -O2 -mtune=native -fbounds-check
