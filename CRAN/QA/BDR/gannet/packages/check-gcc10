#! /bin/csh
~/R/packages/InUse.R ~/R/packages/tests-gcc10 || exit 1
~/R/packages/InUse.R ~/R/test-4.0 || exit 1

set path=(~/bin /usr/local/bin /usr/local/texbin ~/bin /usr/sbin $path)
setenv PKG_CONFIG_PATH /usr/local/lib64/pkgconfig:/usr/lib64/pkgconfig

cd ~/R/svn/R-devel
svn up
env CRAN_RSYNC=/data/gannet/ripley/R/packages tools/rsync-recommended
cd ~/R/R-gcc10
make -j20
~/R/R-gcc10/bin/Rscript -e 'update.packages(.Library, ask = F)'
cd ~/R/packages/tests-gcc10
make all
make summary2 process
