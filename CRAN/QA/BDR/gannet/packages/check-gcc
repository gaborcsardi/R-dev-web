#~/R/packages/revdeps1 ~/R/test-3.5 ~/R/packages/tests/revdeps.rds
#./bin/Rscript -e 'update.packages(.Library, ask = F)'
cd R/packages
#./update
~/R/packages/revdeps1 ~/R/test-3.5 ~/R/packages/tests/revdeps.rds
/data/gannet/ripley/R/R-patched/bin/Rscript unavailable.R
env DISPLAY=:5 /data/gannet/ripley/R/R-patched/bin/Rscript updates.R
~/R/packages/revdeps2 ~/R/test-3.5 ~/R/packages/tests/revdeps.rds
