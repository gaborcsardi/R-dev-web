#!/bin/sh
MAIL=/bin/mail
RECIP="ripley@stats.ox.ac.uk,Kurt.Hornik@wu.ac.at,ligges@statistik.tu-dortmund.de"
TMPFILE=/tmp/R-logs.$$

LC_COLLATE=C /usr/local/bin/Rscript /data/gannet/ripley/R/packages/check_diffs.R > $TMPFILE
cp /data/gannet/Rlogs/gcc-check.csv /data/gannet/Rlogs/gcc-check.csv.prev
cp /data/gannet/Rlogs/clang-check.csv /data/gannet/Rlogs/clang-check.csv.prev
cp /data/gannet/Rlogs/Sparc-check.csv /data/gannet/Rlogs/Sparc-check.csv.prev
cp /data/gannet/Rlogs/Solx86-check.csv /data/gannet/Rlogs/Solx86-check.csv.prev
rm -f /data/ftp/pub/bdr/memtests/valgrind/README.txt
ln -s /data/ftp/pub/bdr/memtests/README.txt /data/ftp/pub/bdr/memtests/valgrind
rm -rf /data/gannet/Rlogs/memtests
cp -pr /data/ftp/pub/bdr/memtests /data/gannet/Rlogs
rm -rf /data/gannet/Rlogs/noLD
cp -pr /data/ftp/pub/bdr/noLD /data/gannet/Rlogs


cat $TMPFILE | $MAIL -s "[Rcheck] gannet on `date -Idate`" $RECIP
rm -f $TMPFILE
