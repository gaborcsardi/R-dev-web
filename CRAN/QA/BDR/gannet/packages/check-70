#! /bin/csh
set path=(~/bin /usr/local/bin /usr/local/texbin ~/bin /usr/sbin $path)
setenv PKG_CONFIG_PATH /usr/local/lib64/pkgconfig:/usr/lib64/pkgconfig

cd ~/R/svn/R-devel
svn up
tools/rsync-recommended
cd ~/R/gcc7-SAN
(source SETUP; make -j20; ./bin/Rscript -e 'update.packages(.Library, ask = F)')
cd ~/R/packages/tests-70
make
