#! /bin/csh
set path=(~/bin /usr/local/bin /usr/local/texbin /usr/sbin /home/ripley/bin $path)
setenv PKG_CONFIG_PATH /usr/local/lib64/pkgconfig:/usr/lib64/pkgconfig

cd ~/R/svn
svn up R-devel R-3-2-branch
R-devel/tools/rsync-recommended
R-3-2-branch/tools/rsync-recommended
cd ~/R
make -C R-devel
make -C R-patched

cd ~/R/packages
./update
/home/ripley/R/R-devel/bin/Rscript unavailable.R
env DISPLAY=:5 /home/ripley/R/R-devel/bin/Rscript updates.R
/home/ripley/R/R-patched/bin/Rscript unavailable.R
env DISPLAY=:5 /home/ripley/R/R-patched/bin/Rscript updates.R

cd tests-devel
make unpack
./script
cat check_log
echo 'done'

cd ~/R/packages/tests
make unpack
./script
