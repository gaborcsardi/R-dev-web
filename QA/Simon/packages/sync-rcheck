#!/bin/sh

# rsync package check results with Phaeton

: ${BASE=/Builds/packages}
#: ${server=urbaneks@rosuda.org}
: ${server=r.rsync.urbanek.info}

OWD=`pwd`
cd "$BASE"

versions=`sed -e 's/:.*//' $BASE/vers`
#chmod a+r tiger-universal/results/2.4.0/*.Rcheck/00*
for v in $versions; do
   rsync -avz --delete tiger-universal/results/$v/ ${server}:/R/build/tiger-universal/results/$v/
done

cd "$OWD"
